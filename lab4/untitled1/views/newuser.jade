extends layout

block content
    h1= title
    form#formAddUser(name="adduser",method="post",action="/newuser/adduser")
        input#inputUserName(type="text", placeholder="username", name="username")
        input#inputUserEmail(type="email", placeholder="useremail", name="useremail")
        input#inputUserPassword(type="password", placeholder="password", name="userpassword")
        button#btnSubmit(type="submit") submit